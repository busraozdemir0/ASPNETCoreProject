@model ASPNETCoreProject.Models.Personel
@{
    ViewData["Title"] = "YeniPersonel";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div class="my-4">
    <form class="form-group" method="post">
        <b>Personel Adı</b>
        @Html.TextBoxFor(x=>x.Ad,new{@class="form-control"})
        <br />
        <b>Personel Soyadı</b>
        @Html.TextBoxFor(x=>x.Soyad,new{@class="form-control"})
        <br />
        <b>Şehir</b>
        @Html.TextBoxFor(x=>x.Sehir,new{@class="form-control"})
        <br />
        <b>Birim</b>
        @Html.DropDownListFor(x=>x.Birim.BirimID,(List<SelectListItem>)ViewBag.birims, new{@class="form-control"})
        <br />

        <button class="btn btn-info">Personel Ekle</button>
    </form>
</div>

