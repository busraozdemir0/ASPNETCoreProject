@using ASPNETCoreProject.Models
@model List<Birim>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div class="container my-4">
    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Departman</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.BirimID</td>
                <td>@x.BirimAd</td>
                <td><a href="/Birim/BirimSil/@x.BirimID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Birim/BirimGuncelle/@x.BirimID" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Birim/BirimDetay/@x.BirimID" class="btn btn-secondary">Detay</a></td>
            </tr>
        }
    </table>
    <a href="/Birim/YeniBirim/" class="btn btn-primary">Yeni Birim</a>
</div>

